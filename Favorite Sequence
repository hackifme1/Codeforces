Cpp code :

#include <bits/stdc++.h>
using namespace std;

typedef long long ll;

int main() {
	ll t;
	cin>>t;
	while(t--)
	{
		ll n,i,j,k;
		cin>>n;
		ll a[n];
		for(i=0;i<n;i++)
		cin>>a[i];
		
		for(i=0;i<n/2;i++)
		{
			cout<<a[i]<<" "<<a[n-i-1]<<" ";
		}
		if(n%2!=0)
		cout<<a[n/2];
		
		cout<<endl;
	}
	return 0;
}
